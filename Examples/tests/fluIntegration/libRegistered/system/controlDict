FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     icoFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         0.5;

deltaT          0.1;

writeControl    timeStep;

writeInterval   1;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression compressed;

timeFormat      general;

timePrecision   6;

runTimeModifiable yes;

functions (
    // Currently, there is a limitation on working with "pythonFlu"
    // registered "functionObjects", namely the corresponding 
    // functions should be mentioned before any other Python 
    // integrated "functionObject" in the "functions" list
    your_favorite_function_name
    {
        type pythonFlu;
        startCode "print 'Starting';a=0; print dir()";
        executeCode "a += runTime.value(); print 'a:',a";
        endCode "print 'The End!!!'";
    }
    pythonSimple
    {
        type pythonIntegration;
        startCode "print 'Starting';a=0; print dir()";
        executeCode "a+=1; print 'a:',a";
        writeCode "print 'Never been here'";
        //        tolerateExceptions true;
    }
);

libs (
    // Currently, there is a limitation on working with "pythonFlu"
    // registered "functionObjects", namely the corresponding 
    // library ("libfluFunctionObjectsDriver.so") should be mentioned
    // before any other Python integrating "functionObject" library
    // in the "libs" list
    "libfluFunctionObjectsDriver.so"
    "libpythonIntegration.so"
);

